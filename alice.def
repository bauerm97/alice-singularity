Bootstrap: docker
From: centos:7
IncludeCmd: no

%runscript
	proxyfile=/tmp/proxy.32840.1476452991 #/tmp/proxy.$$.`date +%s`
	export X509_USER_PROXY=$proxyfile
	/cvmfs/alice.cern.ch/bin/alienv  -alien -c ALIEN_DEBUG='-d:Trace' alien proxy-info
	/cvmfs/alice.cern.ch/bin/alienv  -alien -c ALIEN_DEBUG='-d:Trace' alien RunAgent

%setup
	cp environment $SINGULARITY_ROOTFS

%post
	yum -y install http://linuxsoft.cern.ch/wlcg/centos7/x86_64/HEP_OSlibs-7.1.5-0.el7.cern.x86_64.rpm
	yum -y install gcc-gfortran which
	mkdir -p /cvmfs/alice.cern.ch
	mkdir -p /cvmfs/alice-ocdb.cern.ch
	mkdir /lustre
	
